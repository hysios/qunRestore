{
  "name": "chrome-extension-scripts",
  "version": "0.9.5",
  "description": "Zero configuration environment for developing Chrome extensions with all new features like Webpack, Babel, React and almost everything you want.",
  "author": "David Schovanec",
  "bin": {
    "chrome-extension": "./bin/chrome-extension"
  },
  "scripts": {
    "test": "TODO",
    "start": "NODE_ENV=production ./node_modules/.bin/babel src --out-dir lib --source-maps inline --watch",
    "build": "NODE_ENV=production ./node_modules/.bin/babel src --out-dir lib --source-maps inline",
    "example": "npm run build && ./bin/chrome-extension run ./example/manifest.json -o ./build",
    "example:build": "npm run build && ./bin/chrome-extension build ./example/manifest.json -o ./release",
    "prepublish": "npm run build"
  },
  "keywords": [
    "chrome",
    "extension",
    "chrome-extension",
    "babel",
    "webpack",
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "reload"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/schovi/create-chrome-extension"
  },
  "bugs": {
    "url": "https://github.com/schovi/create-chrome-extension/issues"
  },
  "dependencies": {
    "autoprefixer": "6.4.0",
    "babel-loader": "6.2.5",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-preset-es2016": "6.11.3",
    "babel-preset-es2017": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-target": "0.0.4",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chrome-location": "^1.2.1",
    "colors": "1.1.2",
    "commander": "2.9.0",
    "css-loader": "0.24.0",
    "file-loader": "0.9.0",
    "findup-sync": "0.4.2",
    "fs-extra": "0.30.0",
    "json-loader": "0.5.4",
    "less": "2.7.1",
    "less-loader": "2.2.3",
    "node-sass": "^4.14.0",
    "postcss-loader": "0.11.0",
    "precss": "1.4.0",
